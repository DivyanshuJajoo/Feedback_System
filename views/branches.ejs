<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <link href="/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="/assets/css/font-awesome.min.css" rel="stylesheet">
    <link href="/assets/css/style.css" rel="stylesheet">

    <title>Admin Page</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            color: #333;
        }

        .header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background-color: #f8f9fa;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            z-index: 100;
        }

        .header img {
            width: 100%;
            height: auto;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 200px;
            height: 100%;
            background-color: #222;
            color: #fff;
            padding: 10px;
            box-sizing: border-box;
        }

        .sidebar a {
            display: block;
            padding: 10px;
            color: #fff;
            text-decoration: none;
            margin-bottom: 10px;
        }

        .main {
            margin-left: 220px; /* Adjust margin-left to account for the width of the sidebar */
            padding: 20px; /* Add some padding for better spacing */
        }

        .main form {
            display: flex;
            flex-wrap: wrap;
        }

        .main input {
            flex: 1 0 100%;
            margin: 10px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .main button {
            margin: 10px;
            padding: 10px;
            border: none;
            background-color: #3498db;
            color: #fff;
            border-radius: 4px;
        }

        .branch-list, .semester-list, .section-list {
            margin-top: 20px;
        }

        .list-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            border-bottom: 1px solid #ccc;
        }

        .list-item button {
            margin-left: 10px;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <a href="#">Admin</a>
        <a href="/admin">Dashboard</a>
        <a href="/collegeDetails">College Details</a>
        <a href="/discipline">Discipline</a>
        <a href="/branches">Branches</a>
        <a href="/subjects">Subjects</a>
        <a href="/faculty">Faculty</a>
        <a href="/mapping">Mapping</a>
        <a href="/server">Server</a>
        <a href="/accessing">New Access</a>
        <a href="#">Report</a>
    </div>

    <div class="main">
        <h1>Branches</h1>

        <h2>Add Branch</h2>
        <form action="/branches/add-branch" method="post">
            <label for="discipline_id">Discipline</label>
            <select id="discipline_id" name="discipline_id">
                <% disciplines.forEach(discipline => { %>
                    <option value="<%= discipline.id %>"><%= discipline.name %></option>
                <% }) %>
            </select>
            <label for="branch_name">Branch Name</label>
            <input type="text" id="branch_name" name="branch_name" required>
            <button type="submit">Add Branch</button>
        </form>

        <div class="branch-list">
            <h2>Branches</h2>
            <% if (branches.length > 0) { %>
                <% branches.forEach(branch => { %>
                    <div class="list-item">
                        <span><%= branch.discipline_name %> - <%= branch.branch_name %></span>
                        <form action="/branches/delete/<%= branch.id %>" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No branches available.</p>
            <% } %>
        </div>

        <h2>Add Semester</h2>
        <form action="/branches/add-semester" method="post">
            <label for="discipline_id">Discipline</label>
            <select id="discipline_id" name="discipline_id">
                <% disciplines.forEach(discipline => { %>
                    <option value="<%= discipline.id %>"><%= discipline.name %></option>
                <% }) %>
            </select>
            <label for="branch_name">Branch Name</label>
            <select id="branch_name" name="branch_name">
                <% branches.forEach(branch => { %>
                    <option value="<%= branch.branch_name %>"><%= branch.branch_name %></option>
                <% }) %>
            </select>
            <label for="year">Year</label>
            <input type="number" id="year" name="year" required>
            <label for="num_semesters">Number of Semesters</label>
            <input type="number" id="num_semesters" name="num_semesters" required>
            <button type="submit">Add Semester</button>
        </form>

        <div class="semester-list">
            <h2>Semesters</h2>
            <% if (semesters.length > 0) { %>
                <% semesters.forEach(semester => { %>
                    <div class="list-item">
                        <span><%= semester.discipline_name %> - <%= semester.branch_name %> - Year <%= semester.year %> - <%= semester.num_semesters %> Semesters</span>
                        <form action="/branches/delete-semester/<%= semester.id %>" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No semesters available.</p>
            <% } %>
        </div>

        <h2>Add Section</h2>
        <form action="/branches/add-section" method="post">
            <label for="discipline_id">Discipline</label>
            <select id="discipline_id" name="discipline_id">
                <% disciplines.forEach(discipline => { %>
                    <option value="<%= discipline.id %>"><%= discipline.name %></option>
                <% }) %>
            </select>
            <label for="branch_name">Branch Name</label>
            <select id="branch_name" name="branch_name">
                <% branches.forEach(branch => { %>
                    <option value="<%= branch.branch_name %>"><%= branch.branch_name %></option>
                <% }) %>
            </select>
            <label for="year">Year</label>
            <input type="number" id="year" name="year" required>
            <label for="section_name">Section Name</label>
            <input type="text" id="section_name" name="section_name">
            <button type="submit">Add Section</button>
        </form>

        <div class="section-list">
            <h2>Sections</h2>
            <% if (sections.length > 0) { %>
                <% sections.forEach(section => { %>
                    <div class="list-item">
                        <span><%= section.discipline_name %> - <%= section.branch_name %> - Year <%= section.year %> - Section <%= section.section_name %></span>
                        <form action="/branches/delete-section/<%= section.id %>" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No sections available.</p>
            <% } %>
        </div>
    </div>
</body>
</html>
