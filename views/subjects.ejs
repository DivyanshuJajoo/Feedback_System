<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <link href="/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="/assets/css/font-awesome.min.css" rel="stylesheet">
    <link href="/assets/css/style.css" rel="stylesheet">

    <title>Manage Subjects</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            color: #333;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 200px;
            height: 100%;
            background-color: #222;
            color: #fff;
            padding: 10px;
            box-sizing: border-box;
        }

        .sidebar a {
            display: block;
            padding: 10px;
            color: #fff;
            text-decoration: none;
            margin-bottom: 10px;
        }

        .main {
            margin-left: 220px;
            padding: 20px;
        }

        .form-control {
            margin-bottom: 15px;
        }

        .btn-primary {
            margin-right: 10px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f8f9fa;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #ddd;
        }

        .table-actions {
            display: flex;
            align-items: center;
        }

        .table-actions form {
            margin: 0;
        }

        .table-actions a {
            margin-left: 10px;
        }
    </style>
</head>
<body>
<div class="sidebar">
    <a href="#">Admin</a>
    <a href="/admin">Dashboard</a>
    <a href="/collegeDetails">College Details</a>
    <a href="/discipline">Discipline</a>
    <a href="/branches">Branches</a>
    <a href="/subjects">Subjects</a>
    <a href="/faculty">Faculty</a>
    <a href="/mapping">Mapping</a>
    <a href="/server">Server</a>
    <a href="/accessing">New Access</a>
    <a href="#">Report</a>
</div>

<div class="main">
    <h1>Manage Subjects</h1>
    <form action="/subjects/add" method="POST" class="form">
        <div class="form-group">
            <label for="discipline_id">Discipline</label>
            <select id="discipline_id" name="discipline_id" class="form-control">
                <option value="">Select Discipline</option>
                <% disciplines.forEach(discipline => { %>
                    <option value="<%= discipline.id %>"><%= discipline.name %></option>
                <% }) %>
            </select>
        </div>

        <div class="form-group">
            <label for="branch_id">Branch</label>
            <select id="branch_id" name="branch_id" class="form-control">
                <option value="">Select Branch</option>
                <% branches.forEach(branch => { %>
                    <option value="<%= branch.branch_id %>" data-discipline="<%= branch.discipline_id %>"><%= branch.branch_name %></option>
                <% }) %>
            </select>
        </div>

        <div class="form-group">
            <label for="subject_name">Subject Name</label>
            <input type="text" id="subject_name" name="subject_name" class="form-control" required>
        </div>

        <button type="submit" class="btn btn-primary">Add Subject</button>
    </form>

    <h2>Subjects List</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Discipline</th>
                <th>Branch</th>
                <th>Subject</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% subjects.forEach(subject => { %>
                <tr>
                    <td><%= subject.discipline_name %></td>
                    <td><%= subject.branch_name %></td>
                    <td><%= subject.name %></td>
                    <td class="table-actions">
                        <form action="/subjects/delete/<%= subject.subject_id %>" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                        <a href="/subjects/edit/<%= subject.subject_id %>" class="btn btn-secondary">Edit</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('#discipline_id').on('change', function () {
            var selectedDiscipline = $(this).val();
            $('#branch_id option').each(function () {
                var branchDisciplineId = $(this).data('discipline');
                if (selectedDiscipline === "" || branchDisciplineId == selectedDiscipline) {
                    $(this).show();
                } else {
                    $(this).hide();
                }
            });
            $('#branch_id').val('');
        });
    });
</script>
</body>
</html>
