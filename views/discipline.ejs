<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <link href="/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="/assets/css/font-awesome.min.css" rel="stylesheet">
    <link href="/assets/css/style.css" rel="stylesheet">

    <title>Admin Page</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            color: #333;
        }

        .header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background-color: #f8f9fa;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            z-index: 100;
        }

        .header img {
            width: 100%;
            height: auto;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 200px;
            height: 100%;
            background-color: #222;
            color: #fff;
            padding: 10px;
            box-sizing: border-box;
        }

        .sidebar a {
            display: block;
            padding: 10px;
            color: #fff;
            text-decoration: none;
            margin-bottom: 10px;
        }

        .main {
            margin-left: 220px; /* Adjust margin-left to account for the width of the sidebar */
            padding: 20px; /* Add some padding for better spacing */
        }

        .main form {
            display: flex;
            flex-wrap: wrap;
        }

        .main input {
            flex: 1 0 100%;
            margin: 10px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .main button {
            margin: 10px;
            padding: 10px;
            border: none;
            background-color: #3498db;
            color: #fff;
            border-radius: 4px;
        }

        .discipline-list {
            margin-top: 20px;
        }

        .discipline-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            border-bottom: 1px solid #ccc;
        }

        .discipline-item button {
            margin-left: 10px;
        }
    </style>
  </head>
  <body>
    <div class="sidebar">
        <a href="#">Admin</a>
        <a href="/admin">Dashboard</a>
        <a href="/collegeDetails">College Details</a>
        <a href="/discipline">Discipline</a>
        <a href="/branches">Branches</a>
        <a href="/subjects">Subjects</a>
        <a href="/faculty">Faculty</a>
        <a href="/mapping">Mapping</a>
        <a href="/server">Server</a>
        <a href="/accessing">New Access</a>
        <a href="#">Report</a>
    </div>

    <div class="main">
        <h1>Add Discipline</h1>
        <form action="/discipline/add" method="post">
            <label for="discipline_name">Discipline</label>
            <input type="text" id="discipline_name" name="discipline_name" required>
            <label for="duration">Duration</label>
            <input type="text" id="duration" name="duration" required>
            <button type="submit">Add Discipline</button>
        </form>

        <div class="discipline-list">
            <h2>Available Disciplines</h2>
            <% if (disciplines.length > 0) { %>
                <% disciplines.forEach(discipline => { %>
                    <div class="discipline-item">
                        <span><%= discipline.name %> (<%= discipline.duration %> years)</span>
                        <div>
                            <form action="/discipline/edit/<%= discipline.id %>" method="get" style="display:inline;">
                                <button type="submit" class="btn btn-warning">Edit</button>
                            </form>
                            <form action="/discipline/delete/<%= discipline.id %>" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No disciplines available.</p>
            <% } %>
        </div>
    </div>
  </body>
</html>
